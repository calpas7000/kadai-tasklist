<div class="row">
  <aside class="col-sm-4">
    <div class="card">
      <div class="card-header">
        <h3 class="card-title"><%= current_user.name %></h3>
      </div>
      <div class="card-body">
        <img class="rounded img-fluid" src="<%= gravatar_url(current_user, {size: 500 }) %>" alt="">
      </div>
    </div>
  </aside>
  <div class="col-sm-8">
    <h1>タスク一覧 <span class="badge badge-secondary"><%= @count_tasks %></span></h1>
    <% if @tasks.any? %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th>id</th>
            <th>ステータス</th>
            <th>タスク</th>
          </tr>
        </thead>
        <tbody>
          <% @tasks.each do |task| %>
            <tr>
              <td><%= link_to task.id, task_path(task) %> </td>
              <td><%= task.status %></td>
              <td><%= task.content %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      <div>
        <%= paginate @tasks %>
      </div>
    <% end %>
    
    <%= link_to "新規メッセージの投稿", new_task_path, class: "btn btn-primary" %>
  </div>
</div>
